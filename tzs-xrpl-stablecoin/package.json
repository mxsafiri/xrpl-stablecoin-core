{
  "name": "tzs-xrpl-stablecoin-workspace",
  "version": "1.0.0",
  "description": "TZS Stablecoin - XRPL-based stablecoin with backend and frontend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend/dashboard"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend/dashboard && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend/dashboard && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend/dashboard && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend/dashboard && npm test",
    "setup": "npm install && cd backend && npm install && cd ../frontend/dashboard && npm install",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:reset": "cd backend && npm run db:reset"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "xrpl",
    "stablecoin",
    "cryptocurrency",
    "blockchain",
    "tanzanian-shilling",
    "defi"
  ],
  "author": "Victor Muhagachi",
  "license": "MIT",
  "dependencies": {
    "@netlify/functions": "^4.2.5",
    "serverless-http": "^4.0.0"
  }
}
