# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tzs_stablecoin
DB_USER=postgres
DB_PASSWORD=postgres

# XRPL Configuration
XRPL_NETWORK=testnet  # Options: testnet, devnet, mainnet
XRPL_ADMIN_SEED=s...  # Admin wallet seed (keep this secure!)
XRPL_TREASURY_SEED=s...  # Treasury wallet seed (keep this secure!)
XRPL_ISSUER_ADDRESS=r...  # Issuer address for the TZS token
XRPL_CURRENCY_CODE=TZS  # Currency code for the token

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# Multisig Configuration
MULTISIG_QUORUM=2  # Number of signatures required for approval
MULTISIG_SIGNERS=3  # Total number of possible signers

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug
